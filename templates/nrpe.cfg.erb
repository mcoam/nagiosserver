##GENERATE BY PUPPET
#############################################################################


log_facility=daemon
pid_file=/var/run/nrpe/nrpe.pid
server_port=5666
nrpe_user=nrpe
nrpe_group=nrpe
allowed_hosts=<%= @allowed_hosts %> 
dont_blame_nrpe=0
allow_bash_command_substitution=0
debug=0
command_timeout=60
connection_timeout=300

# The following examples use hardcoded command arguments...
command[check_users]=/usr/lib64/nagios/plugins/check_users -w 5 -c 10
command[check_load]=/usr/lib64/nagios/plugins/check_load -w 15,10,8 -c 30,25,20
command[check_root_partition]=/usr/lib64/nagios/plugins/check_disk -w 20% -c 10% -p /
command[check_total_procs]=/usr/lib64/nagios/plugins/check_procs -w 400 -c 450 
command[check_swap]=/usr/lib64/nagios/plugins/check_swap -w 80% -c 50%
command[check_memory]=/usr/lib64/nagios/plugins/check_memory.pl -u M -w 2% -c 1%


include_dir=/etc/nrpe.d/
